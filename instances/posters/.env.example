# Posters Instance Environment Configuration
# Copy this to .env and fill in your values

# Instance Configuration
INSTANCE_NAME=posters
CONFIG_PATH=./config/instance-config.json

# Vision Model Configuration
VISION_MODEL=minicpm-v
VISION_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
VISION_CONFIDENCE_THRESHOLD=0.7

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT=2
RETRY_ATTEMPTS=3
LOG_LEVEL=info

# Source Images
SOURCE_IMAGES_PATH=./SourceImages

# Neo4j Configuration (different ports from Memento-new)
NEO4J_URI=bolt://localhost:7693
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j

# PostgreSQL Configuration (different port from Memento-new)
POSTGRES_HOST=localhost
POSTGRES_PORT=5440
POSTGRES_USER=posters
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=posters

# MinIO Configuration (different ports from Memento-new)
MINIO_ENDPOINT=http://localhost:9010
MINIO_ACCESS_KEY=posters
MINIO_SECRET_KEY=your_minio_secret
MINIO_BUCKET=poster-images

# Embedding Configuration
# VOYAGE_API_KEY=your-voyage-api-key
# OPENAI_API_KEY=your-openai-api-key
EMBEDDING_PROVIDER=voyage

# Search Configuration
DEFAULT_SEARCH_STRATEGY=hybrid
HYBRID_GRAPH_WEIGHT=0.4
HYBRID_VECTOR_WEIGHT=0.6
VECTOR_THRESHOLD=0.7
