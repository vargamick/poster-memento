# Posters Instance Environment Configuration
# Copy this to .env and fill in your values

# Instance Configuration
INSTANCE_NAME=posters
CONFIG_PATH=./config/instance-config.json

# Vision Model Configuration
# For local models:
VISION_MODEL=minicpm-v-ollama
OLLAMA_URL=http://localhost:11434
VISION_CONFIDENCE_THRESHOLD=0.7

# Cloud Vision Model API Keys (optional - set to use cloud models)
# To use cloud models, set VISION_MODEL to one of:
#   OpenAI: gpt-5.2, gpt-5
#   Anthropic: claude-opus-4.6, claude-sonnet-4.5, claude-haiku-4.5
#   Google: gemini-3-pro, gemini-3-flash
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT=2
RETRY_ATTEMPTS=3
LOG_LEVEL=info

# Source Images
SOURCE_IMAGES_PATH=./SourceImages

# Neo4j Configuration (different ports from Memento-new)
NEO4J_URI=bolt://localhost:7693
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j

# PostgreSQL Configuration (different port from Memento-new)
POSTGRES_HOST=localhost
POSTGRES_PORT=5440
POSTGRES_USER=posters
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=posters

# MinIO Configuration (different ports from Memento-new)
MINIO_ENDPOINT=http://localhost:9010
MINIO_ACCESS_KEY=posters
MINIO_SECRET_KEY=your_minio_secret
MINIO_BUCKET=poster-images

# Embedding Configuration
EMBEDDING_PROVIDER=voyage
VOYAGE_API_KEY=your-voyage-api-key
VOYAGE_EMBEDDING_MODEL=voyage-3
EMBEDDING_DIMENSIONS=1024

# Search Configuration
DEFAULT_SEARCH_STRATEGY=hybrid
HYBRID_GRAPH_WEIGHT=0.4
HYBRID_VECTOR_WEIGHT=0.6
VECTOR_THRESHOLD=0.7
